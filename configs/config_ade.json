{
    "name": "DKD",
    
    "n_gpu": 1,
    "multiprocessing_distributed": false,
    "rank": 0,
    "world_size": 1,
    "dist_backend": "nccl",
    "dist_url": "tcp://127.0.0.1:12345",
    "seed": 1,
    "use_amp": true,
    "arch": {
        "type": "DeepLabV3",
        "args": {
            "output_stride": 16,
            "norm_act": "bn_sync",
            "backbone_pretrained": true,
            "freeze_all_bn": false
        }
    },
    "data_loader": {
        "type": "ADEIncrementalDataLoader",
        "args": {
            "task": {
                "name": "100-50",
                "step": 0,
                "setting": "overlap",
                "idxs_path": "./data/"
            },
            "train": {
                "args": {
                    "transform": true,
                    "transform_args": {
                        "crop_size": 512
                    },
                    "masking_value": 0
                },
                "batch_size": 24
            },
            "val": {
                "cross_val": false,
                "args": {
                    "transform": true,
                    "transform_args": {
                        "crop_size": 512
                    },
                    "masking_value": 255
                },
                "batch_size": 1
            },
            "test": {
                "args": {
                    "transform": true,
                    "transform_args": {
                        "crop_size": 512
                    },
                    "masking_value": 255
                },
                "batch_size": 1
            },
            "num_workers": 4,
            "pin_memory": true,
            "memory": {"mem_size": 0}
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.0025,
            "weight_decay": 1e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "hyperparameter": {
        "pos_weight": 35,
        "mbce": 1,
        "kd": 5,
        "dkd_pos": 5,
        "dkd_neg": 5,
        "ac": 1
    },
    "lr_scheduler": {
        "type": "WarmupPolyLR",
        "args": {"warmup_iters": 0.2}
    },
    "evaluator": {
        "type": "Evaluator",
        "args": {}
    },
    "metrics": [
        "Pixel_Accuracy",
        "Pixel_Accuracy_Class",
        "Mean_Intersection_over_Union"
    ],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved_ade/",
        "save_period": -1,
        "validation_period": -1,
        "verbosity": 2,
        "monitor": "off",
        "early_stop": -1,
        "reset_best_mnt": false,
        "tensorboard": false
    }
}